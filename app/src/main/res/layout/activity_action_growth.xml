<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ActionGrowthActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_tanggal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_border"
                    android:text="" />

                <Button
                    android:id="@+id/datepicker"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@drawable/ic_date"
                    android:backgroundTint="@color/colorPrimaryDark" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_tinggi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/min_tinggi"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@drawable/ic_minus"
                    android:backgroundTint="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/tinggi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_border"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/max_tinggi"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@drawable/ic_plus"
                    android:backgroundTint="@color/colorPrimaryDark" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_berat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/min_berat"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@drawable/ic_minus"
                    android:backgroundTint="@color/colorPrimaryDark" />

                <EditText
                    android:id="@+id/berat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_border"
                    android:inputType="number"
                    android:text="0"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/max_berat"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:background="@drawable/ic_plus"
                    android:backgroundTint="@color/colorPrimaryDark" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_catatan" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/catatan"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:scrollbars="vertical"
                android:gravity="top|left"></EditText>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorButtonGreen"
        android:text="@string/action_simpan"
        android:textColor="@color/colorTextGreen"
        android:textStyle="bold" />
</LinearLayout>